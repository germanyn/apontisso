{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "dist",
    "paths": {
      "@/*": ["*"]
    },
    "declaration": true
  }
}
